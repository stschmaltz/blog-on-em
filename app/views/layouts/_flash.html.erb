<% if flash[:notice] %>
  <div
  class="flash-notice px-4 py-3 rounded relative flex justify-center mb-4"
  role="alert"
>
    <span class="block sm:inline"><%= flash[:notice] %></span>
  </div>
<% end %>
<% if flash[:alert] %>
  <div
  class="flash-alert px-4 py-3 rounded relative flex justify-center mb-4"
  role="alert"
>
    <span class="block sm:inline"><%= flash[:alert] %></span>
  </div>
<% end %>
