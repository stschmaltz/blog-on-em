<div class="w-full px-10 py-6 mt-2 rounded-lg shadow-sm bg-slate-700/60">
  <%if current_user%>
    <div class="text-gray-700">
      <%= form_with(model: [post, comment], local: true, html: {id: 'comment-form'}) do |f| %>
        <%= render "shared/form_errors", errors:comment.errors %>
        <div class="mb-4">
          <%= f.label "Leave a comment", class: 'form-label mb-6'
    %>
          <%= f.text_area :content, rows: 3, class: 'form-input' %>
        </div>
        <div class="flex justify-start">
          <%= f.submit 'Add Comment', class: 'button-basic' %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="flex justify-start items-center mt-4">
      <h3>Sign in/up to leave a comment</h2>
      <%= link_to "Sign In", new_session_path, class:"button-basic ml-10 mr-4"%>
      <%= link_to "Sign Up", signup_path, class:"button-basic"%>
    </div>
  <% end %>
</div>
