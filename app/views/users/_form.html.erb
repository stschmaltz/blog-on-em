<div class="my-5 text-gray-700  max-w-2xl bg-sky-950 p-8 rounded-lg">
  <%= form_with(model: user,local:true) do |f| %>
    <%= render "shared/form_errors", errors: user.errors %>
    <div class="mb-4">
      <%= f.label :name, class: 'form-label' %>
      <%= f.text_field :name, autofocus:true, class: 'form-input' %>
    </div>
    <div class="mb-4">
      <%= f.label :email, class: 'form-label' %>
      <%= f.text_field :email, class: 'form-input' %>
    </div>
    <div class="mb-4">
      <%= f.label :password, class: 'form-label' %>
      <%= f.password_field :password, class: 'form-input' %>
    </div>
    <div class="mb-4">
      <%= f.label :password_confirmation, class: 'form-label' %>
      <%= f.password_field :password_confirmation, class: 'form-input' %>
    </div>
    <div class="flex justify-start">
      <%= f.submit button_text, class: 'inline-flex items-center button-basic' %>
    </div>
  <% end %>
</div>
