<%# code for user sign up form needs email, password, confirm password and name %>
<div class="my-5 text-gray-700  max-w-2xl">
  <%= form_with(model: user,local:true) do |f| %>
    <%= render "shared/form_errors", errors: user.errors %>
    <div class="mb-4">
      <%= f.label :name, class: 'block text-gray-400 font-bold mb-2' %>
      <%= f.text_field :name, autofocus:true, class: 'form-input mt-1 block w-full
      rounded-md border-gray-300 shadow-sm focus:border-indigo-500
      focus:ring focus:ring-indigo-200 focus:ring-opacity-50' %>
    </div>
    <div class="mb-4">
      <%= f.label :email, class: 'block text-gray-400 font-bold mb-2' %>
      <%= f.text_field :email, autofocus:true, class: 'form-input mt-1 block w-full 
      rounded-md border-gray-300 shadow-sm focus:border-indigo-500
      focus:ring focus:ring-indigo-200 focus:ring-opacity-50' %>
    </div>
    <div class="mb-4">
      <%= f.label :password, class: 'block text-gray-400 font-bold mb-2' %>
      <%= f.password_field :password, autofocus:true, class: 'form-input mt-1 block w-full 
      rounded-md border-gray-300 shadow-sm focus:border-indigo-500 
      focus:ring focus:ring-indigo-200 focus:ring-opacity-50' %>
    </div>
    <div class="mb-4">
      <%= f.label :password_confirmation, class: 'block text-gray-400 font-bold mb-2' %>
      <%= f.password_field :password_confirmation, autofocus:true, class: 'form-input mt-1 block w-full 
      rounded-md border-gray-300 shadow-sm focus:border-indigo-500 
      focus:ring focus:ring-indigo-200 focus:ring-opacity-50' %>
    </div>
    <div class="flex justify-start">
      <%= f.submit 'Sign Up', class: 'inline-flex items-center button-basic' %>
    </div>
  <% end %>
</div>
