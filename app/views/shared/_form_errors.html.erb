<% if errors.any? %>
  <div
    class="error-notice bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4"
  >
    <strong class="font-bold">
      <%= "Error".pluralize(errors.count) %>
    </strong>
    <ul class="mt-1">
      <% errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
