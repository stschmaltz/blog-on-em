<h1>Published Posts</h1>
<ul>
  <% @posts.each do |post| %> <% if post.published %>
  <li>
    <strong><%= post.title %></strong>: <%= post.body %> (published:
    <%=post.published %>)
  </li>
</ul>

<h1>Unpublished Posts</h1>
<ul>
  <% @posts.each do |post| %> <% unless post.published %>
  <li>
    <strong><%= post.title %></strong>: <%= post.body %> (published:
      <%=post.published %>)
  </li>
</ul>
