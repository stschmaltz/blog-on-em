<h1>Published Posts</h1>
<ul>
  <% @posts.each do |post| if post.published_at %>
  <li>
    <strong><%= post.title %></strong>:
    <p><%= post.body %></p>
    <p><%= published(post) %></p>
  </li>
  <% end %> <% end %>
</ul>

<h1>Unpublished Posts</h1>
<ul>
  <% @posts.each do |post| unless post.published_at %>
  <li>
    <strong><%= post.title %></strong>:
    <p><%= truncate(post.body, ) %></p>
    <p><%= published(post) %></p>
  </li>
  <% end %> <% end %>
</ul>
