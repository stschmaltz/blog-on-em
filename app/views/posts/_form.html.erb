<div class="text-gray-700">
  <%= render "shared/form_errors", errors:post.errors %>
  <%= form_with(model: post, local: true, class: 'flex flex-col') do |f| %>
    <div class="mb-4">
      <%= f.label :title, class: 'form-label' %>
      <%= f.text_field :title, autofocus:true, class: 'form-input' %>
    </div>
    <div class="mb-4">
      <%= f.label :body, class: 'form-label' %>
      <%= f.text_area :body, rows: 7, class: 'form-input' %>
    </div>
    <div class="mb-4">
      <%= f.label :tags, class: 'form-label' %>
      <%= f.text_field :tags, value: @post.tags&.join(','), class: 'form-input' %>
    </div>
    <div class="mb-10">
      <%= f.label :published_at, class: 'form-label' %>
      <div class="flex items-center w-full">
        <%= f.date_select :published_at, {}, { class: 'mt-1 mr-3 form-input-selector' } %>
      </div>
    </div>
    <div class="flex justify-start">
      <%= f.submit button_text, class: 'inline-flex items-center button-basic' %>
    </div>
  <% end %>
</div>
