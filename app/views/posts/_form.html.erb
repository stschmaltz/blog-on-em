<div class="text-gray-700">
  <% if post.errors.any? %>
    <div
    class="error-notice bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4"
  >
      <strong class="font-bold">
        <%= "Error".pluralize(post.errors.count) %>
      </strong>
      <ul class="mt-1">
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with(model: post, local: true, class: 'flex flex-col') do |f| %>
    <div class="mb-4">
      <%= f.label :title, class: 'block text-gray-400 font-bold mb-2' %>
      <%= f.text_field :title, autofocus:true, class: 'form-input mt-1 block
    w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500
    focus:ring focus:ring-indigo-200 focus:ring-opacity-50' %>
    </div>
    <div class="mb-4">
      <%= f.label :body, class: 'block text-gray-400 font-bold mb-2' %>
      <%= f.text_area :body, rows: 7, class: 'form-input mt-1 block w-full
    rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring
    focus:ring-indigo-200 focus:ring-opacity-50' %>
    </div>
    <div class="mb-4">
      <%= f.label :tags, class: 'block text-gray-400 font-bold mb-2' %>
      <%= f.text_field :tags, value: @post.tags&.join(','), class: 'form-input
    mt-1 block w-full rounded-md border-gray-300 shadow-sm
    focus:border-indigo-500 focus:ring focus:ring-indigo-200
    focus:ring-opacity-50' %>
    </div>
    <div class="mb-10">
      <%= f.label :published_at, class: 'block text-gray-400 font-bold mr-2' %>
      <div class="flex items-center w-full">
        <%= f.date_select :published_at, {}, { class: ' mt-1 mr-3 block rounded-md
      border-gray-300 shadow-sm focus:border-indigo-500 focus:ring
      focus:ring-indigo-200 focus:ring-opacity-50 px-30' } %>
      </div>
    </div>
    <div class="flex justify-start">
      <%= f.submit button_text, class: 'inline-flex items-center px-4 py-2 border
    border-transparent text-base font-medium rounded-md text-white bg-indigo-600
    hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2
    focus:ring-indigo-500' %>
    </div>
  <% end %>
</div>
