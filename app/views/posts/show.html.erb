<section class="admin">
  <div class="flex justify-end">
    <%= link_to post_path(@post), method: :delete, data: { confirm: "Confirm you
    want to delete this post." }, class: "mb-4 mr-5 px-6 py-2 border
    border-transparent text-base font-medium rounded-md text-white bg-rose-800
    hover:bg-rose-700 focus:outline-none focus:ring-2 focus:ring-offset-2
    focus:ring-rose-500" do %> Delete <% end %>
    <!--  -->
    <%= link_to edit_post_path(@post), class: "mb-4 px-6 py-2 border
    border-transparent text-base font-medium rounded-md text-white bg-indigo-600
    hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2
    focus:ring-indigo-500" do %> Edit <% end %>
  </div>
</section>

<section>
  <div class="text-gray-100 mb-5">
    <div class="px-10 py-6 rounded-lg shadow-sm dark:bg-sky-950 min-h-[50vh]">
      <div class="mt-3">
        <a
          rel="noopener noreferrer"
          href="#"
          class="text-2xl font-bold hover:underline"
          ><%= @post.title %></a
        >
        <div class="flex">
          <span class="text-sm dark:text-gray-400"
            ><%= published(@post) %></span
          >
        </div>
        <p class="mt-2 whitespace-pre-wrap"><%= @post.body %></p>
      </div>
    </div>
  </div>
</section>
