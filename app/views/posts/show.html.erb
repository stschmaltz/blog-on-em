<section class="admin">
  <div class="flex justify-end">
    <%= link_to post_path(@post), method: :delete, data: { confirm: "Confirm you
    want to delete this post." }, class: "mb-4 mr-5 button-delete" do %> Delete <% end %>
    <%= link_to edit_post_path(@post), class: "mb-4 button-basic w-24" do %> Edit <% end %>
  </div>
</section>
<section>
  <div class="text-gray-100 mb-5">
    <div class="px-10 py-6 rounded-lg shadow-sm dark:bg-sky-950 min-h-[70vh]">
      <div class="mt-3">
        <h2><%= @post.title %></h3
        >
        <div class="flex">
          <span class="text-sm dark:text-gray-400"
            ><%= published(@post) %></span
          >
        </div>
        <div class="mt-2 mb-5">
          <% @post.tags&.each do |tag| %>
            <span class="px-2 mr-2 py-1 text-xs font-bold text-gray-100 bg-gray-600 rounded-full dark:bg-gray-700">
              <%= tag %>
            </span>
          <% end %>
        </div>
        <p class="mt-2 whitespace-pre-wrap text-lg"><%= @post.body %></p>
      </div>
    </div>
  </div>
</section>
<section>
  <%= render 'comments/list', comments: @comments, count: @post.comment_count%>
  <%= render 'comments/form', post: @post, comment: @comment, button_text:"Save" %>
</section>
