<section>
  <div class="text-gray-100 mb-5">
    <div class="px-10 py-6 rounded-lg shadow-sm dark:bg-sky-950 min-h-[50vh]">
      <div class="mt-3">
        <a
          rel="noopener noreferrer"
          href="#"
          class="text-2xl font-bold hover:underline"
          ><%= @post.title %></a
        >
        <div class="flex">
          <span class="text-sm dark:text-gray-400"
            ><%= published(@post) %></span
          >
        </div>
        <p class="mt-2"><%= @post.body %></p>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="flex justify-start">
    <%= link_to edit_post_path(@post), class: "px-4 py-2 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %> Edit <% end %>
  </div>
</section>
